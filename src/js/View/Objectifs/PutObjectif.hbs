 <form id="formPutObjectif" method="post">
  <div class="form-group">
    <label for="libobjectif">libobjectif</label>
    <input type="text" class="form-control" id="libobjectif" placeholder="Entrez un libellé" value="{{objectif.libobjectif}}" required>
  </div>
  <button class="btn btn-default">Valider</button>
</form>

<hr>

<label for="numaction">Liste des actions de l'objectif</label>
<table class="table" id="tabAction">
  <thead>
    <tr>
      <th>Identifiant</th>
      <th>Libellé</th>
    </tr>
  </thead>
  <tbody>
  {{#each actions}}
    <tr>
      <td>{{attributes.numaction}}</td><td>{{attributes.libaction}}</td>
      <td><a href="#Actions/Modifier/{{attributes.numaction}}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </a>
      </td>
      <td><a href="#Objectifs/Modifier/{{../objectif.numobjectif}}/Action/Supprimer/{{attributes.numaction}}">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
 <form id="formPutAction" method="post">
  <div class="form-group">
   <label for="numaction">Ajouter une Action</label>
    <select  class="form-control" id="numaction">
      <option value=null> Aucun </option>
      {{#each actionsTot}}
        <option value={{numaction}}>{{numaction}} {{libaction}}</option>
      {{/each}}
    </select>
  </div>
  <button class="btn btn-default">Ajouter</button>
</form>

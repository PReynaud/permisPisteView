<a href="#Regles/Ajout">
	<button type="button" class="btn btn-success">
	  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter Règle
	</button>
</a>

<table class="table">
	<thead>
		<tr>
			<th>Identifiant</th>
			<th>Libellé</th>
			<th>Score</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each regles}}
			<tr onClick="document.location='#Regles/{{attributes.numregle}}'">
				<td>{{attributes.numregle}}</td>
				<td>{{attributes.libregle}}</td>
				<td>{{attributes.scoremin}}</td>
				<td>
					<a href="#Regles/Modifier/{{attributes.numregle}}">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
					<a href="#Regles/Supprimer/{{attributes.numregle}}">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>
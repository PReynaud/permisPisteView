<table class="table">
	<thead>
		<tr>
			<th>Identifiant</th>
			<th>ID Action Requise</th>
			<th>Libellé Action</th>
			<th>Score min</th>
			<th>Regles</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td>{{action.numaction}}</td>
				<td>{{action.actNumaction}}</td>
				<td>{{action.libaction}}</td>
				<td>{{action.scoremin}}</td>
				<td>
					{{#if regles}}
						<table class="table" id="tabRegle">
							<thead>
								<tr>
									<th>Identifiant</th>
									<th>Libellé</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								{{#each regles}}
									<tr onClick="document.location='#Regles/{{attributes.numregle}}'">
										<td>{{attributes.numregle}}</td><td>{{attributes.libregle}}</td>
									</tr>
								{{/each}}
							</tbody>
						</table>
					{{/if}}
				</td>
				<td>
					<a href="#Actions/Modifier/{{action.numaction}}">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
					<a href="#Actions/Supprimer/{{action.numaction}}">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</a>
				</td>
			</tr>
	</tbody>
</table>